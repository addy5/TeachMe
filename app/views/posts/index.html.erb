<div id="coverPic">
  <p class="bfQuote">
    "Tell me and I forget.</br>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Teach me and I remember."</br>  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;- <span id="bfSign"> Benjamin Franklin </span>
  </p>
</div>

<h1 class='title' style="display:inline-block; width: 145px;">Teach<span class='logoM'>M</span>e:</h1>

<div style="display:inline-block; width:230px; height:20px; vertical-align:top; margin-top: 16px">
    <%= form_tag("/posts/search", method: "get") do %>
      <%= text_field_tag :query,nil, :placeholder => "enter subject / location", :style => "height:27px; width: 150px; text-align:center; font-size:13px;" %>
      <%= submit_tag "Search", :style => "height: 24px; font-size:24px;" %>
    <% end %>
</div>

<div class ='container'>

  <% @posts.each do |p|%>
    <a href="/posts/<%= p.id %>">
    <div class="indexListing">
      <div class="indexImage" style="background-image: url('<%= p.profile_url %>'); background-size: cover; background-repeat: no-repeat;">

      </div>
    <h6><%=p.title.capitalize%></h6>
    <p>With tutor: <%= p.user.first_name%></p>
  </div>
    </a>
  <% end %>

</div>
